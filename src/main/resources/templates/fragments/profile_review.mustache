<div class="feed_info">
            <div class="feed_imgs">
                <img class="feed_img" src="{{reviewerImg}}" alt="Riviewer profile img">
            </div>
            <div class="feed_content">
                <div class="feed_name">{{reviewerFirstName}} for {{revieweeFirstName}}</div>
                <div class="feed_desc">{{content}}</div>
            </div>
            <div class="feed_interaction">

                <form method="POST" action="/Profile/Vote/{{reviewId}}/true/true" class="interaction_form">
                    <input type="hidden" name="feed_id" value="{{reviewId}}"> <!-- feed ID -->
                    <button type="submit" class="feed_likes"></button>
                </form>

                <div>{{upvoteCount}}</div>
                <div>{{downvoteCount}}</div>
                  
                <form method="POST" action="/Profile/Vote/{{reviewId}}/true/false" class="interaction_form">
                    <input type="hidden" name="feed_id" value="{{reviewId}}"> <!-- feed ID -->
                    <button type="submit" class="feed_dislikes"></button>
                </form>

            </div>
</div>